<div class="card m-1 mt-3">
    <div class="row col-12">
        <img src="{{image}}" alt="image" class="col-2 ms-2 p-3">
        <div class="col-4 mt-5">
        <h3 class="ms-1">{{name}}</h3>
        <p>{{description}}</p>
    </div>
    <div class="col-2 mb-5 mt-5 ms-3">
        <p>{{price.title}}:</p>
        <h5>{{price.value}}</h5>
    </div>
     <div class="col-2 ms-4 mt-5">
        <p class="mt-3">{{amount}}</p>
    </div>
    <div class="col-1 mt-4 ps-0">
       {{#each buttons}}
       {{#if isPrimary}}<button class="btn btn-primary btn-lg m-2 mt-3">{{text}}</button>{{/if}}
       {{#if isDanger}}<button class="btn btn-outline-danger btn-lg m-2 mt-3">{{text}}</button>{{/if}}
       {{/each}}
    </div>
    </div>
</div>