<main class="ms-1">
    <div class="mt-5 mb-4 ms-1"><h1>{{header}}</h1></div>

    {{#with purchase}}
    <div class="row">
    <div class="col-12 mb-4">
    <div class="nav nav-tabs">
         {{#each tabs}}
                <div class="nav-item me-4 col-3 text-center">
                      <span class="nav-link {{#if @first}} active {{/if}}">{{this}}</span>
                </div>
          {{/each}}
    </div>
    </div>
        </div>
        {{#with actionBlock}}
        <div class="row col-12">
                <div class="col-4">
                    <input class="form-control p-2 ps-4" placeholder="{{input.placeholder}}">
                </div>
                <div class="col-6">
                {{#each buttons}}
                {{#if isSuccess}}<a href="{{link}}" class="btn btn-success me-2">{{text}}</a>{{/if}}
                {{#if isOutline}}<a href="{{link}}" class="btn btn-outline-success me-2">{{text}}</a>{{/if}}
                {{#if isDanger}}<a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>{{/if}}
                {{/each}}
                </div>
        </div>
        <div class="mt-4 mb-3"><hr></div>{{/with}}

