<section class="m-1">
{{#with newsBlock}}
    <h2 class="text-center m-4 mt-5">{{title}}</h2>

    <div class="row g-2 mb-4">
    {{#each cards}}
    <div class="col-3">
      <div class="card text-bg-dark">
        <div class="card-header">
        <div class="card-title">{{title}}</div>
        {{#if isNew}}
       <span class="badge rounded-pill text-bg-success">NEW</span>
        {{/if}}
        {{#if isTop}}
        <span class="badge rounded-pill text-bg-danger">TOP</span>
        {{/if}}
        </div>
        <div class="card-body">
          <p>{{description}}</p>
        </div>
      </div>
    </div>
    {{/each}}
</div>
{{/with}}
</section>
<br>
<hr>
<br>
<br>
{{#with goodsBlock}}
<section m-5>
  <div class="row">
        <div class="nav nav-tabs">
          {{#each tabs}}
                <div class="nav-item">
                      <span class="nav-link {{#if isDisabled}} disabled {{/if}} 
                       {{#if isActive}} active text-dark {{/if}}">{{text}}</span>
                </div>
          {{/each}}  
        </div>
        </div>
<br>
<br>
<div class="row">
  {{#each cards}}
        <div class="col-4 mb-3">
          <div class="card">
            <img class="card-img-top" src="{{image}}">
            <div class="m-2 pt-2">
              <h5 class="card-title">{{title}}
              {{#if isHot}}
              <span class="badge rounded-pill text-bg-warning">HOT!</span>{{/if}}
              {{#if isNew}} <span class="badge rounded-pill text-bg-primary">New</span>{{/if}}</h5>
              </div>
            <p class="m-2">{{description}}</p>
        </div>
    </div>
    {{/each}}
   </div>
</section>
<br>
<br>
  {{/with}}

  <hr>
  {{#with subscribe}}
  <div class="card text-bg-dark">
    <div class="card-body">
    <h2 class="text-light">{{header}}</h2>
    <p>{{description}}</p>
    
    {{#each buttons}}
    <div class="mt-3">
      <a href="{{link}}" class="btn btn-primary">{{text}}</a>
    </div>
    {{/each}}
   
    </div>
  </div>
  {{/with}}
<hr>
{{#with service}}
<div class="card text-center text-bg-success">
  <h2 class="m-2 mt-3">{{title}}</h2>
  <p class="m-2">{{description}}</p>
  {{#each buttons}}
    <div class="m-3">
      <a href="{{link}}" class="btn btn-primary btn-lg">{{text}}</a>
    </div>
  {{/each}}
</div>
{{/with}}

