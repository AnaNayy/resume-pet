<main class="m-2">

{{!-- {{> shopheader}} --}}
<br>

<section class="m-3">
    <ol class="breadcrumb">
    {{#each breadcrumb}}
        <li class="breadcrumb-item {{#if @last}}text-dark{{/if}}">
        {{#if url}}
            <a href="{{url}}">{{name}}</a>
        {{else}}
            {{name}}
        {{/if}}
        </li>
    {{/each}}
    </ol>
</section>
<br>

<div class="row gx-5">
<section class="col-6">
{{#with productData}}
<img class=" col-12 mb-3" src="{{img}}" alt="img">
        {{#with info}}
        <div class="card">
            <div class="card-title m-2">
                <h5 class="ms-2">{{title}}</h5>
                <div class="card-body p-2">
                    <p>{{about}}</p>
                    <h4>{{price}}</h4>
                
                    {{#each category}}
                        {{#if isHot}}
                            <span class="badge rounded-pill text-bg-warning text-light">{{name}}</span>
                        {{/if}}
                        {{#if isNew}}
                            <span class="badge rounded-pill text-bg-primary text-light">{{name}}</span>
                        {{/if}}
                        {{#if isBonus}}
                            <span class="badge rounded-pill text-bg-info text-light">{{name}}</span>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}{{/with}}
</section>


<section class="col-5 ms-5 me-0 p-0">
    {{#with productData}}
        {{#with item}}
        <div>
                <table class="table table-bordered">
                    <thead>
                        <tr>{{#each head}}
                            <th>{{this}}</th>
                        {{/each}}</tr>
                    </thead>
                <tbody>
                    {{#each body}}
                    <tr>
                        {{#each this}}
                        <td>{{this}}</td>
                        {{/each}}
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
        </div>
        {{/with}}
        {{#with param}}
        <div class="card">
                <div class="card-header">{{title}}</div>
                <ul class="list-group">
                    {{#each list}}
                        <li class="list-group-item"> {{this}}</li>
                    {{/each}}
                </ul>
        </div>
        {{/with}}
        {{#with alert}}
            {{#if isError}}
                <div class="alert alert-danger mt-3">{{text}}</div>
            {{/if}}
        {{/with}}
        {{/with}}
        </section>
 </div>

{{#with productData}}
<div class="card mt-4">
    <div class="card-body">
        {{#each actionList}}
            {{#if isWarning}}<span class="btn btn-lg text-bg-warning text-light me-3">{{name}}</span>{{/if}}
            {{#if isError}}<span class="btn btn-lg btn-outline-danger me-3">{{name}}</span>{{/if}}
            {{#if isSuccess}}<span class="btn btn-lg btn-success text-light me-3">{{name}}</span>{{/if}}
            {{#if isGood}}<span class="btn btn-lg btn-outline-success me-3">{{name}}</span>{{/if}}
        {{/each}}
    </div>
</div>
{{/with}}

<br><br><br>
<hr>
{{#with goodsOtherBlock}}
 <h2 class="text-center m-4 mt-5">{{title}}</h2>
 <section class="row gy-2 mb-5">
    {{#each cards}}
    {{> shopcard}}
    {{!-- <div class="col-4">
        <div class="card">
            <img class="card-img-top" src="{{image}}">
            <div class="m-2 pt-2">
              <h5 class="card-title">{{title}}
              {{#if isHot}}
              <span class="badge rounded-pill text-bg-warning">HOT!</span>{{/if}}
              {{#if idNew}} <span class="badge rounded-pill text-bg-primary">New</span>{{/if}}</h5>
              </div>
            <p class="m-2">{{description}}</p>
        </div>
    </div> --}}
    {{/each}}
 </section>
{{/with}}

<hr>
{{> shopaction}}

{{!-- {{> shopfooter}} --}}
</main>