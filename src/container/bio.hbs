{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
 
<div>
  <section>
    <h1>{{name}}</h1>
    <em>a brilliant {{nationality}} {{occupation}}</em>
    <p><b>Born</b> on {{birthdate}} in {{birthplace}}</p>
    <p><b>Died</b> on {{deathdate}} in {{deathplace}}</p>
    <p><b>Well-known for:</b>
          <ul><li>{{known_for}} </li></ul></p>
  </section>
  <br><hr>
   <section> 
    <h3>Education</h3>
        <ul>{{#each education}}
          <li><b>Degree: </b> {{degree}}</li>
          <li><b>Major: </b> {{field}}</li>
          <li><b>University:</b> {{institution}} , {{year}}</li>
           {{/each}}</ul>
  </section>
  <br><hr>
   <section> 
    <h3>Most notable publications: </h3>
        <ul>{{#each notable_publications}}
          <li><b>Publication title: </b> {{title}}, {{year}}</li>
          <em>Published by {{publisher}}</em>
           {{/each}}</ul>
  </section>
      <br><hr>
   <section> 
    <h3>Work partners: </h3>
        <ul>{{#each partners}}
          <li><b> {{name}}</b> , {{relationship}} ({{years}})</li>
         {{/each}}</ul>
  </section>
  <hr>
  <div>
    <h3>Major achievement: </h3>
    {{#each awards}}<p>{{title}} , {{year}} <br>
      <em>{{description}}</p></em>
    {{/each}}
</div>
 <br>
<hr> 
 <div>
    <h3>Major discoveries: </h3>
    {{#each major_discoveries}}<p>{{title}} , {{year}} <br>
      <em>{{description}}</p></em>
    {{/each}}
</div>
<div>
    <h3>Major contributions: </h3>
    {{#with contributions}}<p>{{title}} , {{year}} <br>
      <em>{{description}}</p></em>
    {{/with}}
</div>
<hr>
<p><em>Was influenced by: </em>{{influences}}</p>
<p><em>His works influenced:</em> {{influenced}}</p>
<hr>
<section>
  <p>{{name}} once said: </p><ul>{{#each quotes}}
  <li><q>{{a}}</q></li>
  <li><q>{{b}}</q></li>
  <li><q>{{c}}</q></li>
  <li><q>{{d}}</q></li>
  {{/each}}</ul>
</section>
</div>


