<main>
    <section class="ms-1 mt-5 mb-5">
    <ol class="breadcrumb">
    {{#each breadcrumb}}
        <li class="breadcrumb-item {{#if @last}}text-dark{{/if}}">
        {{#if url}}
            <a href="{{url}}">{{name}}</a>
        {{else}}
            {{name}}
        {{/if}}
        </li>
    {{/each}}
    </ol>
</section>
    <h1 class="mt-5 mb-3 ms-1">{{header}}</h1>
    <section class="row g-2 mt-4 mb-5">
        {{#each sortBlock}}
        <div class="col-3 ms-1">
            <select class="form-select form-select-lg">
                    <option>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
        </div>    
        {{/each}}
</section>


<div class="row">
    {{#with filterBlock}}
   
    <div class="card col-4 p-2 ms-2"> 
        {{#with sellers}}
     <div class="form-label ms-3">{{title}}</div>
        {{#each list}}
