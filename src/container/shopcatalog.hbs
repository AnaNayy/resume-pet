                <label class="form-check-label">{{value}}</label>
                <input type="checkbox" class="form-check-input">
                </div>
            {{/each}}
             {{/with}}
  <div class="m-1 ms-2"><hr></div>
  {{#with brands}}
    <div class="form-label ms-3">{{title}}</div>
    <div class="col-11 ms-2 mt-1 p-1">
        <input class="form-control m-1" placeholder="{{input.placeholder}}">
        
        {{#each options}}
                <div class="form-check m-3 ms-2">
                    <input type="checkbox" class="form-check-input">
                    <label class="form-check-label">{{value}}</label>
                </div>
        {{/each}}
     </div>
<div class="m-1 ms-2 mt-0"><hr></div>
  {{/with}}
{{#with price}}
    <div class="form-label ms-3">{{title}}</div>
    {{#with range}}
    <div class="col-11 ms-2 mt-2 p-1">
    <input class="form-control m-1" placeholder="{{from}}">
    <input class="form-control m-1 mt-3" placeholder="{{to}}"> 
    {{/with}}
    {{#with button}}
        <a href="{{link}}" class="btn btn-outline-secondary ms-1 mt-3 col-2">{{text}}</a>
    {{/with}}
    </div>
   
{{/with}}

