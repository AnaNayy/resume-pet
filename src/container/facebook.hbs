{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div class="mt-5 ms-5 mb-5"><h1>{{name}}</h1> </div>
<hr>
<main class="mt-5 ms-5 mb-5">
  <section>
  <div><h1>Users:</h1>
  <ul>
  {{#each users}} 
    <li>User id: {{id}}</li>
    <li>User name: <strong>{{name}}</strong></li>
    <li>Gender: {{gender}}</li>
    <li>Age: {{age}} <hr></li>
    <li><b>User's friends:</b>
      <ul>
        {{#each friends}}
         <li>Friend id: {{id}}</li>
        <li>Friend name: {{name}}</li>
        <li>Friend gender: {{gender}}</li>
        <li>Friend age: {{age}} </li>
        
        <li><b>Mutual friends:</b>
          <ul>
            {{#each mutual_friends}}
              <li>Id: {{id}}</li>
              <li>Name: {{name}}</li>
              <li>Gender: {{gender}}</li>
              <li>Age: {{age}} </li>
<hr> 
              {{#if mutual_friends}}
                    <li> <em>Has mutual friends:</em>
                            <ul>
                              {{#each mutual_friends}}
                                <li>Name: {{name}}</li>
                                <li>Gender: {{gender}}</li>
                                <li>Age: {{age}} <hr></li>
                                {{/each}}
                            </ul>
                    </li>
              {{/if}}
            {{/each}}
          </ul>
        </li>
        {{#if groups}}
                <li><b><em>Friend joined groups:</em></b>
                    <ul>
                      {{#each groups}}
                        <li>Group id: {{id}}</li>
                        <li>Group name: {{name}}</li>
                        <li>Description: {{description}}</li>
                        <li>Group members: 
                                <ul>
                                  {{#each members}}
                                    <li>Id: {{id}}</li>
                                    <li>Name: {{name}}</li>
                                    <li>Gender: {{gender}}</li>
                                    <li>Age: {{age}} <hr></li>
                                  {{/each}}
                                </ul>
                        </li>
                      {{/each}}
                    </ul>
                </li>
              {{/if}}
        {{/each}}
      </ul>
    </li>
    
      {{#if groups}} <li><b>User joined groups:</b>
        <ul>
          {{#each groups}}
            <li>Group id: {{id}}</li>
            <li>Name: {{name}}</li>
            <li>Description: {{description}}</li>
            <li>Group members: 
                    <ul>
                      {{#each members}}
                        <li>Id: {{id}}</li>
                        <li>Name: {{name}}</li>
                        <li>Gender: {{gender}}</li>
                        <li>Age: {{age}} <hr></li>
                      {{/each}}
                    </ul>
              </li>
          {{/each}}
        </ul>
      </li>
      {{/if}}
    {{/each}}
    </ul>  
  </div>
  </section>
</main>
