<main class="ms-1 mb-5 mt-4">
<div class="mb-4">
    <h1 class="m-1">{{header}}</h1>
</div>

<div class="row g-2  ms-1 pe-0">
 
    <div class="col-8">
        {{#with contacts_data}}
        <h2 class="mt-5">{{title}}</h2>
        <div class="row">
            {{#each buttons}}
            {{#if isPrimary}}<span class="btn btn-warning text-light m-2 col-3 pt-2">{{text}}</span>{{/if}}
            {{#if isOutline}}<span class="btn btn-outline-warning m-2 col-4">{{text}}</span>{{/if}}
            {{/each}}
        </div>

     {{#with form}}
        <div class="row col-12">
           
            {{#with input}}
                    <div class="col-6 mt-3">
                        <label class="form-label">{{surname.label}}</label>
                        <input class="form-control" placeholder="{{surname.placeholder}}">
                        <div class="form-text">{{surname.caption}}</div>
                    </div>
                    <div class="col-6 mt-3">
                        <label class="form-label">{{name.label}}</label>
                        <input class="form-control" placeholder="{{name.placeholder}}">
                        <div class="form-text">{{name.caption}}</div>
                </div>
                    <div class="col-6 mt-3">
                        <label class="form-label">{{phone.label}}</label>
                        <input class="form-control" placeholder="{{phone.placeholder}}">
                        <div class="form-text">{{phone.caption}}</div>
                    </div>
                    <div class="col-6 mt-3">
                        <label class="form-label">{{email.label}}</label>
                        <input class="form-control" placeholder="{{email.placeholder}}">
                        <div class="form-text">{{email.caption}}</div>
                    </div>
      
            {{/with}}
            </div>

    <div class="mt-5 mb-5"><hr></div>

     {{#each switch}}
            <div class="col-12 mt-4 mb-4">
                <div class="form-check form-switch">
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input">
                    {{#unless isActive}}<input type="checkbox checked" class="form-check-input">{{/unless}}
                </div>
            </div>
     {{/each}} 
  

    {{/with}}
{{/with}}
<div class="mt-5 mb-5"><hr></div>

{{#with delivery}}
<h2 class="mt-4">{{title}}</h2>
<div class="card mt-3">
    <div class="row gx-3">
    {{#each select}}
        <div class="col-5 m-3 me-0">
                <label class="form-label ms-1">{{label}}</label>
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
                
            </div>
{{/each}}
</div>
</div>

    <div class="mt-3">
    {{#each delivery_type}}
        <div class="form-check mt-3">
            <label class="form-check-label ms-2">{{type}}</label>
            <input type="radio" class="form-check-input">
        </div>
    {{/each}}
  
    </div>
<div class="mt-5 mb-5"><hr></div>
{{#with payment}}
    <h2 class="mt-4">{{title}}</h2>
    {{#each list}}
        <div class="form-check mt-3">
            <label class="form-check-label ms-2">{{type}}</label>
            <input type="radio" class="form-check-input">
            {{#if description}}<div class="form-text">{{description}}</div>{{/if}}
        </div>
    {{/each}}
{{/with}}
<div class="mt-4 mb-5"><hr></div>
