{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
 
<div>
  {{#with program}}
  <main>
    <section>
    {{> title data="Excursion program" big=true}} 
    {{#with excursion}} <h1>{{name}} in {{#with location}} {{city}}, {{country}} {{/with}} </h1>
      <em>on {{date}} will include: </em>
      <ul>
          {{#each program}}
          <li>
           <h2>{{name}}, {{type}} ({{duration}} hours) </h2>
           <div>{{#with details}}  
            <p> {{#with guide}}
                <em>Your guide's name is {{name}}, speaks {{language}},
                average rating is: {{rating}} </em>{{/with}}</p>

                You will visit 
            
           {{#if museum}} {{name}} {{/if}}
            {{#unless museum}} {{venue}} {{/unless}}</div> 

           <p>
            <h2>{{#with museum}} {{name}} on
           <em>{{#with location}} {{address}}, {{city}}, {{country}} {{/with}}</em></h2>
           </p>
           <h3>You will see:</h3>
              <ol>
                {{#each exhibits}}
                <li> {{description}}, {{name}} 
                  {{#if artist}} by {{artist}} {{/if}}
                  <ul><li>
                      {{#if audio_guide}} Audio guide can be used {{/if}}</li>
                  </ul>
                  </li>
                {{/each}}
              </ol>  
              <br>
              <hr>
           {{/with}}
     
           <h2>{{#with venue}} {{name}} on 
            <em>{{#with location}} {{address}}, {{city}}, {{country}} {{/with}}</em>
            {{/with}}
            </h2>
            <h3>You will see: </h3>
            {{#each performers}} 
            <ul>
              <li> {{type}}, {{name}}</li>
            </ul>
            {{/each}}           
             {{/with}}
          </li>
           
        {{/each}}
      </ul>
   {{/with}}
  </section>
</main>
{{/with}}
</div>


